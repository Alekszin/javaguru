pipeline {
  agent any

  tools {
    gradle "Gradle"
  }

  stages {
    stage('Build apk') {
      steps {
        git 'https://github.com/brodeurlv/fastnfitness.git'
        sh './gradlew clean'
        sh 'mv app/build/outputs/apk/debug/app-debug.apk ~/'
      }
    }

    stage('Run test') {
      steps {
        git 'git@github.com:Alekszin/javaguru.git'
        sh 'gradle build'
      }
    }
  }

  post {
    always {
      script {
        allure([
          includeProperties: false,
          jdk: '',
          properties: [],
          reportBuildPolicy: 'ALWAYS',
          results: [[path: 'allure-results']]
        ])
      }
    }
  }
}
