pipeline {
  agent any

  tools {
    gradle "Gradle"
  }

  stages {
    stage('Build apk') {
      steps {
        echo './gradlew permission denied :('
      }
    }

    stage('Run test') {
      steps {
        g it 'git@github.com:Alekszin/javaguru.git'
        sh 'gradle build'
        }
      }
    }

    post {
      always {
        script {
          allure([
            includeProperties: false,
            jdk: '',
            properties: [],
            reportBuildPolicy: 'ALWAYS',
            results: [[path: 'allure-results']]
          ])
        }
      }
    }
  }
