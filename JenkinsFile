pipeline {
  agent any

  tools {
    gradle "Gradle"
  }

    stage('Run test') {
      steps {
        git 'git@github.com:Alekszin/javaguru.git'
        sh 'gradle build'
      }
    }
  }

  post {
    always {
      script {
        allure([
          includeProperties: false,
          jdk: '',
          properties: [],
          reportBuildPolicy: 'ALWAYS',
          results: [[path: 'allure-results']]
        ])
      }
    }
  }
}
